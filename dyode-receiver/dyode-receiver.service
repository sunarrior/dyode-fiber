[Unit]
Description=Dyode-Receiver service
ConditionPathExists=/opt/dyode-receiver/dyode-receiver.py
After=syslog.target network.target
Wants=network.service

[Service]
User=diode
WorkingDirectory=/opt/dyode-receiver/
ExecStart=/usr/bin/python /opt/dyode-receiver/dyode-receiver.py
Restart=on-failure

[Install]
Alias=dyode-out
WantedBy=multi-user.target